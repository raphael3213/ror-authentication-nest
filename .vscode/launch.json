    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Development",
        "cwd": "${workspaceFolder}",
        "runtimeVersion": "18.20.2",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "start:dev"],
        "env": {
          "DB_HOST": "0.0.0.0",
          "DB_PORT": "5432",
          "DB_DATABASE": "postgres",
          "DB_USERNAME": "postgres",
          "DB_PASSWORD": "password"
        },
        "outputCapture": "std"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Unit Tests",
        "cwd": "${workspaceFolder}",
        "runtimeVersion": "18.17.1",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "test"],
        "env": {},
        "outputCapture": "std"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Coverage Tests",
        "cwd": "${workspaceFolder}",
        "runtimeVersion": "18.17.1",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "test:cov"],
        "env": {},
        "outputCapture": "std"
      }
    ]
  }
  